# .env.example
# Copy this file to .env and update the values

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_SALT=your-password-salt-change-this

# Admin Credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Bedrock Configuration
BEDROCK_KNOWLEDGE_BASE_ID=your-knowledge-base-id
BEDROCK_GENERATION_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# Application Settings
APP_ENV=development
DEBUG=true

# Logging Settings (optional overrides)
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# LangSmith Configuration
LANGCHAIN_TRACING_V2=TRUE
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=lsv2_pt_your_actual_key_here
LANGCHAIN_PROJECT=complai-local